{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "./src/apps/module",
    "strict": false,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/apps/module/*"
      ]
    },
    "types": [
      "node",
      "vite",
      "jest"
    ]
  },
  "include": [
    "./src/apps/module/**/*.ts"
  ],
  "ts-node": {
    "esm": true,
    "jest": true
  },
  "types": [
    "node",
    "vite",
    "jest"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}