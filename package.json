{
  "name": "@bebasebuild/basebuild",
  "description": "basebuild is the core project to build your own dev ecosystem.",
  "version": "2.0.1-beta.1",
  "packageManager": "yarn@1.22.19",
  "type": "module",
  "engines": {
    "node": ">=14.21.3"
  },
  "main": "dist/core/index.js",
  "module": "dist/core/index.js",
  "types": "dist/types/core/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/core/index.js",
      "types": "./dist/types/core/index.d.ts",
      "require": "./dist/core/index.js"
    },
    "./core/*": {
      "import": "./dist/core/*",
      "types": "./dist/types/core/*",
      "require": "./dist/core/*"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./dist/types/plugins/index.js",
      "require": "./dist/plugins/index.js"
    },
    "./plugins/*": {
      "import": "./dist/plugins/*",
      "types": "./dist/types/plugins/*",
      "require": "./dist/plugins/*"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "types": "./dist/types/utils/index.js",
      "require": "./dist/utils/index.js"
    },
    "./utils/*": {
      "import": "./dist/utils/*",
      "types": "./dist/types/utils/*",
      "require": "./dist/utils/*"
    },
    "./types/*": {
      "types": "./dist/types/*"
    },
    "./package.json": "./package.json"
  },
  "license": "MIT",
  "scripts": {
    "start": "yarn dev",
    "dev": "tsc -w",
    "prepublishOnly": "yarn build",
    "build": "shx rm -rf dist && tsc -b",
    "prelink": "yarn build",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand dist",
    "test:dev": "NODE_OPTIONS=--experimental-vm-modules npx jest --runInBand --watchAll dist",
    "test:debug": "node --experimental-vm-modules --inspect-brk node_modules/.bin/jest --runInBand --watchAll dist"
  },
  "dependencies": {
    "debug": "4.3.4",
    "rollup-plugin-copy": "3.5.0",
    "vite": "5.3.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "20.1.2",
    "@types/jest": "29.5.12",
    "@types/node": "20.11.28",
    "jest": "29.7.0",
    "shx": "0.3.4",
    "ts-jest": "29.2.0",
    "ts-node": "10.9.2",
    "tslib": "2.6.3",
    "typescript": "5.5.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bebasebuild/basebuild.git"
  },
  "keywords": [
    "bebasebuild",
    "basebuild",
    "build",
    "base",
    "frontend",
    "front-end",
    "vite",
    "hmr",
    "dev-server",
    "build-tool"
  ],
  "author": "carloshpds <carloshpds@gmail.com>",
  "contributors": [
    "carloshpds <carloshpds@gmail.com>"
  ],
  "bugs": {
    "url": "https://github.com/bebasebuild/basebuild/issues"
  },
  "homepage": "https://github.com/bebasebuild/basebuild#readme"
}
